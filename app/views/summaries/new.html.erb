<h1>Write a Summary for this Post</h1>
<div class="row">
  <div class="col-md-4">
    <%= form_for @summary do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Add summary" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>

