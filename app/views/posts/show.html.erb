<h1><%= markdown_to_html @post.title %></h1>
<div class="row">
  <div class="col-md-8">
    <% if @summary.present? %>
      <p>
      <b> Post Summary: </b> 
      <%= @summary.body %>
      </p>
      <%= link_to "Edit Summary", edit_post_summary_path(@post, @summary), class: 'btn btn-success' %>
    <% else %>
      <%= link_to "Add Summary", new_post_summary_path(@post), class: 'btn btn-success' %>
    <% end %>
    <p><%= markdown_to_html @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
